@model List<ProdutoModel>

<div class="container mt-5">
    <div class="text-center mb-5">

        <form method="get" asp-action="Index" asp-controller="Home" class="d-flex justify-content-center">
            <input name="pesquisar" class="form-control w-50 mx-2" style="border:1px solid black" />
            <button type="submit" class="btn-primary w-10">Pesquisar</button>
        </form>
    </div>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-0">

        @if(Model !=null)
        {
            @if (Model.Where(x => x.QuantidadeEstoque > 0).Count() > 0)
            {
                @foreach(var produto in Model.Where(x => x.QuantidadeEstoque > 0))
                {
                    <div class="card" style="width: 18rem; margin-left: 20px; margin-bottom: 20px; position: relative;">
                        <h5 class="card-title position-absolute" style="background-color: #772953; width: 100px; height:30px; color: white; border-bottom-right-radius:10px; padding: 10px; z-index: 1;">
                            @produto.Categoria.Nome
                        </h5>
                        <div style="height: 250px; display: flex; align-items: center; justify-content: center; background-color: #f8f9fa; padding: 10px;">
                            <img src="/imagem/@produto.Foto" class="card-img-top" style="max-width: 100%; max-height: 100%; object-fit: contain;" />
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@produto.Nome</h5>
                            <h5 class="card-title">@produto.Marca</h5>
                            <h5 class="card-title"><b>R$ @produto.Valor.ToString("F")</b></h5>
                            <a class="btn btn-primary w-100" style="font-size:16px" asp-action="Detalhes" asp-controller="Produto" asp-route-id="@produto.Id">Detalhes</a>
                        </div>
                    </div>
                }
            }

        }
    </div>

</div>